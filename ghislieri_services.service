[Unit]
Description=Ghislieri Services service
After=network.target

[Service]
WorkingDirectory=/opt/ghislieri_services
ExecStart=/usr/bin/python3 main.py student_databaser calendar_manager email_service meals_management content_submitter ghislieri_bot
User = ghislieri-services
Group = ghislieri-services
Restart = on-failure
RestartSec = 5

[Install]
WantedBy=multi-user.target
